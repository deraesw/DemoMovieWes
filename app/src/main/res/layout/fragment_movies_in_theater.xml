<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.movies_in_theater.MoviesInTheaterFragment"
    >

    <android.support.v4.widget.DrawerLayout
        android:id="@+id/dl_movie_in_theater"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_movies_in_theater"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </FrameLayout>

        <fragment
            android:id="@+id/filter_container"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:name="com.demo.developer.deraesw.demomoviewes.ui.movies_in_theater.filter_movies.FilterMoviesFragment"
            />

    </android.support.v4.widget.DrawerLayout>
</layout>
