<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.movies_in_theater.sorting_movies.SortingMovieFragment"
    android:padding="@dimen/padding_normal"
    >

    <TextView
        android:id="@+id/tv_sorting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sorting_by_title"
        android:theme="@style/Text_ItemTitle"
        android:layout_alignParentTop="true"
        />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_sorting_title"
        android:id="@+id/rv_sorting_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>