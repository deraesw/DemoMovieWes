<resources>

    <!-- Base application theme. -->
    <style name="Base.AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorOnPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorOnSurface">@color/black</item>
        <item name="colorAccent">@color/blue_dark</item>
        <item name="colorSurface">@color/gray_dark</item>
        <item name="colorSecondary">@color/yellow</item>
        <item name="android:colorBackground">@color/white</item>
    </style>

    <style name="AppTheme" parent="Base.AppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Text_ItemTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/item_header_title</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text_Item.Secondary.Title" parent="AppTheme">
        <item name="android:textSize">@dimen/item_header_subtitle</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Margin_Lateral_Large">
        <item name="android:layout_marginLeft">@dimen/spacing_small_large</item>
        <item name="android:layout_marginRight">@dimen/spacing_small_large</item>
    </style>

    <style name="Text_ItemTitle.light" parent="AppTheme">
        <item name="android:textSize">@dimen/item_header_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text_ItemTitle.secondary.light" parent="AppTheme">
        <item name="android:textSize">@dimen/item_secondary_item</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text_SecondaryItem" parent="AppTheme">
        <item name="android:textSize">@dimen/item_secondary_item</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="Text_TertiaryItem" parent="AppTheme">
        <item name="android:textSize">@dimen/movie_item_secondary_item</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

    <style name="MovieItemExtraInfoText" parent="AppTheme">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/movie_item_secondary_item</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MovieDetail_ExtraInfoTitle" parent="AppTheme">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="MovieDetail_ExtraInfoValue">
        <item name="android:padding">@dimen/padding_normal</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="MovieDetail_GeneralInfoSubTitle" parent="Margin_Lateral_Large">
        <item name="android:textColor">@color/colorSubTitle</item>
        <item name="android:textSize">@dimen/item_header_subtitle</item>
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
    </style>

    <style name="MovieDetail_GeneralInfoContent" parent="Margin_Lateral_Large">
        <item name="android:layout_marginTop">@dimen/spacing_normal</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.Movie.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
