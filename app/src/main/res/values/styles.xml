<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Transparent">
        <!-- using a semi-transparent window background for the drag-back gesture -->
        <item name="android:windowBackground">@color/scrim</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Text_ItemTitle" parent="AppTheme">
        <item name="android:textSize">@dimen/item_header_title</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="Text_ItemTitle.light" parent="AppTheme">
        <item name="android:textSize">@dimen/item_header_title</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Text_SecondaryItem" parent="AppTheme">
        <item name="android:textSize">@dimen/item_secondary_item</item>
        <item name="android:textColor">@color/secondary_text</item>
    </style>

</resources>
